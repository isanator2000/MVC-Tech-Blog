<div class="card">
    <h2 class="card-header-title has-text-centered">Enter username and password to sign up</h2>
    <form id="signup-form" class="card-content">
        <div class="field">
            <label for="username" class="label">Username</label>
            <div class="control">
                <input placeholder="Enter username" type="username" class="input" id="username-signup">
            </div>
            <p class="help is-small" id="usernameHelp">Your info is safe with us, your email won't be public.</p>
        </div>

        <div class="field">
            <label for="password" class="label">Password</label>
            <div class="control">
                <input placeholder="Enter password" type="password" class="input" id="password-signup">
            </div>
            <p class="help is-small" id="passwordHelp">Must be at least 4 digits long.</p>
        </div>

        <div class="field">
            <p class="has-text-centered">
                <a href="/login">Log in here if you already have an account.</a>
            </p>
        </div>

        <div class="field">
            <div class="control has-text-centered">
                <button type="submit" class="button is-primary" id="login-btn">Sign Up</button>
            </div>
        </div>
    </form>
</div>
<script src="js/signup.js"></script>