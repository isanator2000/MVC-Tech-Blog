<div class="card">
    <h2 class="card-header-title">Add New Post</h2>

    <form class="card-content" id="newpost-form">

        <div class="field">
            <label class="label">Title:</label>
            <div class="control">
                <input type="text" class="input" name="post-title">
            </div>
        </div>

        <div class="field">
            <label class="label">Content:</label>
            <div class="control">
                <textarea class="textarea input" name="post-content"></textarea>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button type="submit" class="button is-primary">Create</button>
            </div>
        </div>

    </form>
</div>
<script src="/js/newpost.js"></script>

